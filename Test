// SUPER MINIMAL TEST HANDLER
$(document).off("click.vanityTest", ".deleteVanityUrlAssociation button.coral3-Multifield-remove");
$(document).on("click.vanityTest", ".deleteVanityUrlAssociation button.coral3-Multifield-remove", function () {
    console.log("[vanity-test] delete button clicked");

    // just nuke ALL vanity URL rows so we know the handler is firing
    var count = 0;
    $("input[name='./sling:vanityPath']").each(function () {
        console.log("[vanity-test] removing vanity:", this.value);
        $(this).parent().closest("coral-multifield-item").remove();
        $(this).parent().closest("li").remove();
        count++;
    });
    console.log("[vanity-test] total deleted:", count);
});
