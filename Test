public static List<String> getOfferProductIds(
            String pagePath,
            ResourceResolver resourceResolver) {

        List<String> offerProductIds = new ArrayList<>();

        if (StringUtils.isBlank(pagePath) || resourceResolver == null) {
            return offerProductIds;
        }

        Resource pageResource = resourceResolver.getResource(pagePath);
        if (pageResource == null) {
            return offerProductIds;
        }

        Resource primaryIdsResource = pageResource
                .getChild(JCR_CONTENT + "/" + PRIMARY_OFFER_PRODUCT_IDS);

        if (primaryIdsResource == null) {
            return offerProductIds;
        }

        Iterator<Resource> children = primaryIdsResource.listChildren();
        while (children.hasNext()) {
            Resource itemResource = children.next();
            ValueMap valueMap = itemResource.getValueMap();

            String offerProductId = valueMap.get(OFFER_PRODUCT_ID, String.class);
            if (StringUtils.isNotBlank(offerProductId)) {
                offerProductIds.add(offerProductId);
            }
        }

        return offerProductIds;
