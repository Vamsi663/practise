@Test
public void testCreateMomProductNode_whenListIsNull_doesNothing() throws Exception {
    OfferProductUtil util = Mockito.spy(new OfferProductUtil());
    Session session = mock(Session.class);
    OfferProduct offerProduct = mock(OfferProduct.class);

    // return null list
    when(offerProduct.getMomProductCodeVO()).thenReturn(null);

    // stub createNode so nodeUtil is never touched
    doReturn(mock(Node.class))
            .when(util)
            .createNode(anyString(), any(Session.class), anyBoolean());

    util.createMomProductNode(offerProduct, session);

    // since list is null, createNode must never be called
    verify(util, never())
            .createNode(anyString(), any(Session.class), anyBoolean());
}
