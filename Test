@Test(expected = NullPointerException.class)
public void test_fetchLandingPagesWithOfferIds_NoOfferIds_expectNPE() throws Exception {
    List<String> secondaryOfferIds = java.util.Arrays.asList("someId");

    Page page = Mockito.mock(Page.class);
    Resource resource = Mockito.mock(Resource.class);
    Node node = Mockito.mock(Node.class);

    Mockito.when(resourceResolver.getResource(Mockito.anyString())).thenReturn(resource);
    Mockito.when(resource.adaptTo(Node.class)).thenReturn(node);
    Mockito.when(page.getPath()).thenReturn("/content/test");
    Mockito.when(node.hasProperty("OFFERIDS")).thenReturn(false);

    // Call public entry. We *expect* an NPE deeper (e.g., getOfferJsonObject/logPageData)
    associateOfferToPageSupportUnderTest
        .fetchLandingPagesWithOfferIds(resourceResolver, secondaryOfferIds, "SECONDARY");
}
